create table profiles (
  id uuid primary key references auth.users on delete cascade,
  email text not null,
  name text,
  introduce text,
  avatar_url text
);

alter table profiles enable row level security;
create policy "ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ã¯èª°ã§ã‚‚å‚ç…§å¯èƒ½" on profiles for select using (true);
create policy "ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ã‚’æ›´æ–°" on profiles for update using (true);

create function public.handle_new_user()
returns trigger as $$
begin 
  insert into public.profiles (id,email)
  values(new.id,new.email);
  return new;
end;
$$ language plpgsql security definer set search_path = public;

create trigger on_auth_user_created
  after insert on auth.users
  for each row execute procedure public.handle_new_user();

insert into storage.buckets (id, name, public)
values ('profile', 'profile', true)
on conflict (id) do nothing;

drop policy if exists "ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã¯èª°ã§ã‚‚å‚ç…§å¯èƒ½" on storage.objects;
drop policy if exists "ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã¯ãƒ­ã‚°ã‚¤ãƒ³ãƒ¦ãƒ¼ã‚¶ãƒ¼ãŒè¿½åŠ " on storage.objects;
drop policy if exists "è‡ªèº«ã®ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã‚’æ›´æ–°" on storage.objects;
drop policy if exists "è‡ªèº«ã®ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã‚’å‰Šé™¤" on storage.objects;

create policy "ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã¯èª°ã§ã‚‚å‚ç…§å¯èƒ½"
on storage.objects
for select
using ( bucket_id = 'profile' );

create policy "ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã¯ãƒ­ã‚°ã‚¤ãƒ³ãƒ¦ãƒ¼ã‚¶ãƒ¼ãŒè¿½åŠ "
on storage.objects
for insert
with check ( bucket_id = 'profile' AND auth.role() = 'authenticated' );

create policy "è‡ªèº«ã®ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã‚’æ›´æ–°"
on storage.objects
for update
with check ( bucket_id = 'profile' AND auth.uid() = owner );

create policy "è‡ªèº«ã®ãƒ—ãƒ­ãƒ•ã‚£ãƒ¼ãƒ«ç”»åƒã‚’å‰Šé™¤"
on storage.objects
for delete
using ( bucket_id = 'profile' AND auth.uid() = owner );

